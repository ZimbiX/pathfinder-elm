#!/bin/bash

set -Eeuo pipefail

cd "$(dirname "$0")/.."

export PATH=node_modules/.bin:$PATH

# For CI - in dev, instead use: ./scripts/setup
if ! command -v elm >/dev/null || [[ "$(elm --version)" != "0.19.1" ]]; then
  npm install -g elm
fi

rm -rf dist
mkdir dist
cp -r assets src/index.html dist
elm make src/Main.elm --output=dist/elm.js
